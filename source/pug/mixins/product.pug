
mixin product(data={})
  .product
    .product__header
      svg(viewBox="0 0 100 4"  xmlns="http://www.w3.org/2000/svg")
        circle(cx="2" cy="2" r="2")
        circle(cx="7" cy="2" r="2")
        circle(cx="12" cy="2" r="2")
    .product__body
      img.product__pic(src=data.src, srcset=data.srcset, alt="Фото макета "+data.title)
      .product__footer
        a.product__title(href=data.url)=data.title
        p.product__text=data.text
        .product__price.btn=data.price
